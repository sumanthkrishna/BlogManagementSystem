class PostsController < ApplicationController

def index
  @posts = Post.all
end

def new
  @post = Post.new
end

def create
  @post = Post.new(params[:post])

  if @post.save
    redirect_to @post, notice: 'Post was successfully created.'
  else
    render action: "new"
  end
end

def show
  @post = Post.find(params[:id])
end

end
