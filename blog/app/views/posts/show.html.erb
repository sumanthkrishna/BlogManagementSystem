<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<p>
  <b>Reference Link:</b>
  <a href='<%= @post.reference_link %>' target="_blank"><%= @post.reference_link %></a>
</p>

<%= "You will be notified when you receive comments" if @post.notify_me == "1" %>

   


<% @post.comments.each do |comment|%>
  <b>User:</b><%= comment.user%><br />
  <b>Comment:</b><%= comment.body%>
<% end %>

<%= form_for([@post, @post.comments.build]) do |com| %>
  <%= com.label :user %>
  <%= com.text_field :user %>
  <%= com.label :body %>
  <%= com.text_field :body %>
  <%= com.submit %>
<% end %>

<%= link_to "Back", posts_path %>
